" Black theme
set background=dark
let g:gruvbox_contrast_dark = 'hard'

" set background=light

" Add underline syntax details
syntax enable

" 16 colors theme
let g:gruvbox_termcolors = 16

" Set italics
let g:gruvbox_italic=1
hi Comment cterm=italic

" Set color scheme
colorscheme gruvbox
hi Normal guibg=NONE ctermbg=NONE
